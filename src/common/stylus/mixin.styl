border-1px($color)
  position: relative
  &:after
    display:block
    position:absolute
    left:0
    bottom:0
    width: 100%
    border-top:1px solid $color
    content: ''


// 清除底边框一像素效果
border-none()
  &:after
    display:none
//定义一个兼容不同dpi的背景图片函数
//正常情况下用2x图片,最小dpi在3的情况下用3x图片
bg-image($url)
  background-image:url($url+"@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image:url($url+"@3x.png")
